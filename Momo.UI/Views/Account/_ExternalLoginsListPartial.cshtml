@model ICollection<AuthenticationClientData>

@using (Html.BeginForm("ExternalLogin", "Account", new {ViewBag.ReturnUrl}))
{
    @Html.AntiForgeryToken()
    <p>
        @foreach (var externalLogin in Model)
        {
            <button
                type="submit"
                name="provider"
                value="@externalLogin.AuthenticationClient.ProviderName"
                title="Log in using your @externalLogin.DisplayName account"
                class="login-button @(string.Format("{0}-login", externalLogin.AuthenticationClient.ProviderName))">

                &nbsp;

            </button>
        }
    </p>
}
