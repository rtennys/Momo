@model LoginModel

@{
    ViewBag.Title = "Sign in";
}

<div class="row">
    <h2>Use an external account</h2>
    @Html.Action("ExternalLoginsList", new {ViewBag.ReturnUrl})
    <p>Keep the number of usernames and passwords you have to remember to a minimum!</p>
</div>

<div class="row spaced">
    <h2>Use a local account</h2>
    @using (Html.BeginForm(new {ViewBag.ReturnUrl}))
    {
        @Html.AntiForgeryToken()

        <ol>
            <li>@Html.EditorFor(m => m.Username)</li>
            <li>@Html.EditorFor(m => m.Password)</li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new {@class = "checkbox"})
            </li>
        </ol>

        <input type="submit" value="Sign in" />

        @Html.ValidationSummary(true)

        <p>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
    }
</div>
