@model LocalPasswordModel

<p>To change your password:</p>

@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()

    <div class="form-group">@Html.EditorFor(m => m.OldPassword)</div>
    <div class="form-group">@Html.EditorFor(m => m.NewPassword)</div>
    <div class="form-group">@Html.EditorFor(m => m.ConfirmPassword)</div>

    <button type="submit" class="btn btn-sm btn-primary">Change password</button>

    @Html.ValidationSummary()
}
