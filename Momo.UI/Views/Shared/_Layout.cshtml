<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width" />

    <title>@(ViewBag.HeaderTitle ?? ViewBag.Title) - @App["name"]</title>

    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.min.css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="row">
        <div class="pg-content">
            @RenderBody()
        </div>
    </div>

    <div class="row">
        <div class="pg-content">
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="pg-content">
            <footer>

                @if (IsSectionDefined("FooterContent"))
                {
                    <div class="row">
                        @RenderSection("FooterContent", false)
                    </div>
                }

                <div class="row" style="@(IsSectionDefined("FooterContent") ? "margin-top: 50px" : "")">
                    <p><a href="@Url.Action("Index", "Home")">Home</a></p>
                    <p><a href="@Url.Action("About", "Home")">About</a></p>
                    <p>&copy; @DateTime.Now.Year - @App["name"] | <a href="@App["versionUrl"]" rel="external" target="_blank">Version @App["version"]</a></p>
                    @if (Request.IsLocal) { <p class="screenSize"></p> }
                </div>

            </footer>
        </div>
    </div>

    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://code.jquery.com/jquery-migrate-1.1.1.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>
</html>
