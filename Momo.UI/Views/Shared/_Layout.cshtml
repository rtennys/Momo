<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

        <title>@ViewBag.Title - @App["name"]</title>

        @Styles.Render("~/bundles/common/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body id="top">

        <div data-role="page" data-theme="d">
            <div data-role="header" data-theme="d">
                <h1>@ViewBag.Title</h1>
                <a href="@Url.Action("Index", "Home")" data-icon="home" data-iconpos="notext" data-direction="reverse">Home</a>
            </div>
            <div data-role="content">
                @RenderBody()
            </div>
            <div data-role="footer" data-theme="d">
                <p>&copy; @DateTime.Now.Year - @App["name"] | <a href="@App["versionUrl"]" target="_blank">Version @App["version"]</a></p>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

        @Scripts.Render("~/bundles/common/js")

        <script type="text/javascript">
            app.webroot = '@Url.Content("~/")';
        </script>

        @RenderSection("scripts", required: false)

    </body>
</html>
