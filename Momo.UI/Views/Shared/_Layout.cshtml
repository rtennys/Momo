<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewBag.Title - @App["name"]</title>

    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />

    @Styles.Render("~/content/css")

    @RenderSection("head", false)
</head>
<body id="momo">

    <div class="container">

        <div class="my-2">
            @RenderBody()
        </div>

        <hr />

        <footer>

            @if (IsSectionDefined("FooterContent"))
            {
                <div>
                    @RenderSection("FooterContent", false)
                </div>
            }

            <div style="@(IsSectionDefined("FooterContent") ? "margin-top: 50px" : "")">
                <p><a href="@Url.Action("Index", "Home")">Home</a></p>
                <p><a href="@Url.Action("About", "Home")">About</a></p>
                <p>&copy; @DateTime.Now.Year - @App["name"] | <a href="@App["versionUrl"]" rel="external" target="_blank">Version @App["version"]</a></p>
                @if (Request.IsLocal)
                {<p class="screenSize"></p>}
            </div>

        </footer>

    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous"></script>

    @Scripts.Render("~/js")
    @RenderSection("scripts", false)

    <script>
        (function () {

            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () { (i[r].q = i[r].q || []).push(arguments); }, i[r].l = 1 * new Date(); a = s.createElement(o), m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m);
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-69788484-1', 'auto');
            ga('send', 'pageview');

            @if (User.Identity.IsAuthenticated)
            {
                @:ga('set', '&uid', '@User.Identity.Name');
            }

        }());
    </script>
</body>
</html>
