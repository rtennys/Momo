<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width" />

    <title>@(ViewBag.HeaderTitle ?? ViewBag.Title) - @App["name"]</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="row">
        <div class="pg-content">
            @RenderBody()
        </div>
    </div>

    <div class="row">
        <div class="pg-content">
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="pg-content">
            <footer>
                @if (IsSectionDefined("FooterBarButtons"))
                {
                    <div class="row">
                        @RenderSection("FooterBarButtons", false)
                    </div>
                }
                @if (IsSectionDefined("FooterContent"))
                {
                    <div class="row">
                        @RenderSection("FooterContent", false)
                    </div>
                }
                <div class="row">
                    <p>&copy; @DateTime.Now.Year - @App["name"] | <a href="@App["versionUrl"]" rel="external" target="_blank">Version @App["version"]</a></p>
                    <p><a href="@Url.Action("Index", "Home")">Home</a></p>
                    <p><a href="@Url.Action("About", "Home")">About</a></p>
                    @Html.Partial("_LoginPartial")
                    @if (Request.IsLocal) { <p class="screenSize"></p> }
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>
</html>
