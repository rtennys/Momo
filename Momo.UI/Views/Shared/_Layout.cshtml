<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

        <title>@ViewBag.Title - @App["name"]</title>

        @Styles.Render("~/bundles/common/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body id="top">

        <div class="bg-white">
            <header class="line site-width page-header">
                <a id="menu-link" href="#menu-container" class="smooth-scroll">Menu</a>
                <h2>@Html.ActionLink(@App["name"] as string, "Index", "Home")</h2>
            </header>
        </div>

        <div class="bg-light">
            <div class="line site-width page-body">
                @RenderBody()
            </div>
        </div>

        <div id="menu-container">
            <div class="line site-width">
                <nav>
                    <ul>
                        <li class="menu-item">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="menu-item">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="menu-item">@(Request.IsAuthenticated ? Html.ActionLink("My Account", "Manage", "Account") : Html.ActionLink("Sign in", "Login", "Account"))</li>
                        <li id="top-link"><a href="#top" class="smooth-scroll">Top</a></li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="bg-darker">
            <footer class="line site-width page-footer">
                <p>&copy; @DateTime.Now.Year - @App["name"] | <a href="@App["versionUrl"]" target="_blank">Version @App["version"]</a></p>
                @Html.Partial("_LoginPartial")
            </footer>
        </div>

        @Scripts.Render("~/bundles/common/js")

        <script type="text/javascript">
            app.webroot = '@Url.Content("~/")';
        </script>

        @RenderSection("scripts", required: false)

    </body>
</html>
