<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@(ViewBag.HeaderTitle ?? ViewBag.Title) - @App["name"]</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">

        <div class="row-fluid">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <ul class="nav">
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li><a href="@Url.Action("About", "Home")">About</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            @RenderBody()
        </div>

        <hr />

        <div class="row-fluid">
            <footer>
                @if (IsSectionDefined("FooterBarButtons"))
                {
                    <div class="row-fluid">
                        @RenderSection("FooterBarButtons", required: false)
                    </div>
                }
                @if (IsSectionDefined("FooterContent"))
                {
                    <div class="row-fluid">
                        @RenderSection("FooterContent", required: false)
                    </div>
                }
                <div class="row-fluid">
                    <p>&copy; @DateTime.Now.Year - @App["name"] | <a href="@App["versionUrl"]" rel="external" target="_blank">Version @App["version"]</a></p>
                    @Html.Partial("_LoginPartial")
                    @if (Request.IsLocal) { <p class="screenSize"></p> }
                </div>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>
</html>
